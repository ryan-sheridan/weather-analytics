<% layout('partials/layout') %>
<div class="rounded p-3 r-toast position-absolute" style="left: 20px; top: calc(20px + var(--navbar-height)) !important;" role="alert" aria-live="assertive" aria-atomic="true">
    <i class="info-icon fa-solid fa-circle-info mx-2"></i><span class="r-toast-message">Hello, world! This is a toast message.</span>
</div>
<div id="map-container" style="position: relative; width: 100%; height: calc(100vh - var(--navbar-height));">
    <div id="map" style="width: 100%; height: 100%;"></div>
    <div id="info-panel">
        <div class="container d-flex flex-column overflow-scroll" style="height: 100%;">
            <button type="button" class="refresh mb-2 mx-2 my-2 btn btn-secondary mt-3">Refresh saved locations</button>
            <!-- insert saved locations here -->
            <!-- see savedLocationBlock.ejs for new version -->
            <div class="mb-5 saved-weather-block-container">
                <div class="saved-location-container d-flex justify-content-between align-items-start mx-2 mt-3 collapsed">
                    <div class="d-flex flex-column">
                        <h4 id="saved-weather-city-name" class="mx-3 pt-3 mb-1">City name</h4>
                        <div class="d-flex align-items-center mx-3 collapsible-content">
                            <p id="saved-weather-icon" class="text-muted mb-3">Lon and Lat</p>
                        </div>
                    </div>
                    <div class="d-flex flex-column align-items-end mx-3 mt-3">
                        <h5 id="weather-degrees" class="mb-0">25&deg;C</h5>
                        <i class="fas fa-umbrella ms-5 mt-2 larger-icon"></i>
                    </div>
                </div>
                <div class="delete-or-analyse px-2 d-flex justify-content-between align-items-start mx-2 collapsible-content collapsed">
                    <button class="analyse-btn btn btn-primary w-100 mx-1 mt-1 mb-2 py-1">Analyse</button>
                    <button class="analyse-btn btn btn-success w-100 mx-1 mt-1 mb-2 py-1">Go to</button>
                    <button class="analyse-btn btn btn-secondary mx-1 mt-1 mb-3 py-1"><i class="fa fa-trash" aria-hidden="true"></i></button>
                </div> 
            </div>
            

            
            <button id="delete-all-location" type="button" class="mb-3 mx-2 my-2 btn btn-secondary mt-auto">Delete all saved locations</button>
        </div>                          
    </div>
</div>
<script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
<link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />